<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tableau Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      padding-top: 56px;
    }

    .navbar {
      margin-bottom: 20px;
    }

    .container {
      max-width: 100%;
    }

    .tableauPlaceholder {
      width: 100%;
      height: 800px;
    }
  </style>
</head>

<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <a class="navbar-brand" href="#">Dashboard</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="btn-group" role="group" aria-label="Dashboard selection">
          <button type="button" class="btn btn-primary" onclick="loadDashboard('overview')">Tổng quan</button>
          <button type="button" class="btn btn-secondary" onclick="loadDashboard('favorite_places')">Vị trí yêu
            thích</button>
          <button type="button" class="btn btn-success" onclick="loadDashboard('team_stats')">Thống kê số lần tham
            gia</button>
        </div>
        <div class="tableauPlaceholder mt-3" id="tableauViz"></div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script type="text/javascript" src="https://public.tableau.com/javascripts/api/tableau-2.min.js"></script>
  <script type="text/javascript">
    var viz;

    function loadDashboard(dashboard) {
      var vizUrl;

      switch (dashboard) {
        case 'overview':
          vizUrl = 'https://public.tableau.com/views/Thngktinhhnhthiuhinny/Dashboard1?:language=en-US&:sid=&:display_count=n&:origin=viz_share_link';
          break;
        case 'favorite_places':
          vizUrl = 'https://public.tableau.com/views/Thngktinhhnhthiuhinny/Dashboard2?:language=en-US&:sid=&:display_count=n&:origin=viz_share_link';
          break;
        case 'team_stats':
          vizUrl = 'https://public.tableau.com/views/Thngktinhhnhthiuhinny/Dashboard3?:language=en-US&:sid=&:display_count=n&:origin=viz_share_link';
          break;
        default:
          vizUrl = 'https://public.tableau.com/views/Thngktinhhnhthiuhinny/Dashboard1?:language=en-US&:sid=&:display_count=n&:origin=viz_share_link';
      }

      var vizContainer = document.getElementById('tableauViz');
      if (viz) {
        viz.dispose();
      }

      var vizOptions = {
        width: '100%',
        height: '800px',
        hideTabs: true,
        hideToolbar: true
      };
      viz = new tableau.Viz(vizContainer, vizUrl, vizOptions);
    }

    document.addEventListener('DOMContentLoaded', function () {
      loadDashboard('overview');
    });
  </script>

</body>

</html>